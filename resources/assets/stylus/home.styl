.Hero
  height 50vh
  display flex
  justify-content center
  align-items center

  &-content
    width 80%
    display flex
    flex-direction column
    justify-content center
    align-items center

  &-title
    font-size 2em

  &-text
    margin 1em 0

.Skills
  display flex
  justify-content space-between
  padding 0 4em

.SkillItem
  flex-basis 15%
  display flex
  flex-direction column
  align-items center

  &-title
    font-size 1em

  &-seriesCount, &-lessonsCount
    font-size .8em

.About
  padding: 4em;
  display: flex;
  align-items: flex-start;

