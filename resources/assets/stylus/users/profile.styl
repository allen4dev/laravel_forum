.Profile

  &-heading
    background-color lightgray
    display flex
    justify-content space-between
    padding 2em 4em

  &-headingContent
    flex-basis 70%
    display flex
    justify-content space-between

  &-details
    display flex
    align-items center

  &-detail
    padding 0 1em
    text-align center
  
.Activities
  max-width 70%
  margin 2em auto

.Activity
  
  &:not(:last-child)
    border-bottom 1px solid black

  &-title
    margin-top 1em

  &-body
    padding 1em 0

