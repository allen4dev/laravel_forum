.Header
  border-bottom 1px solid black
  padding 1em 4em
  display flex
  justify-content space-between
  align-items center

.Footer
  display flex

  & > *
    flex-basis 50%
    padding 1em

.Logo
  font-size 1.5em
  font-weight bold

.Searchbar
  margin 0 2em
  flex-basis 70%
  display flex
  align-items center

  &-input
    background-color lightgray
    flex 1
    border none
    padding .5em

  &-button
    padding .5em
    border none
    margin-left .5em

.Navigation-list
  display flex

  &-item
    padding .5em
  
.ThreadList-items
  display grid
  grid-template-columns repeat(auto-fill, minmax(250px, 1fr))
  grid-gap 1em

  &-button
      display block
      text-align center
      padding 1em 0
      background-color lightgray
      margin-top 2em

.ThreadItem
  border 4px solid goldenrod
  padding .5em

  &-skill
    font-size .8em

  &-heading
    background-color darkorange
    color white
    display inline-block
    padding .2em

  &-body
    font-size 1.2em
    padding 1em 0

  &-info
    font-size .8em
