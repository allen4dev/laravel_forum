.Thread

    &-heading
        display flex
        justify-content space-between
        padding 2em 4em

    &-headingTitle
        flex-basis 50%

    &-title
        font-size 2em

    &-headingContent
        flex 1

    &-content
        padding 2em 4em

    &-footer
        padding 0 4em
        display flex

.RepliesSection
    flex 1

    &-heading
        padding 1em 0

.ReplyBar
    display flex
    flex-wrap wrap

    &-form
        flex 1

    &-input
        width 100%
        padding .5em

    &-footer
        flex-basis 100%

    &-socialLogin
        display flex

.ReplyList
    padding 2em 0

.Reply
    padding 1em 0

    &:not(:last-child)
        border-bottom 1px solid black

    &-heading
        display flex

    &-username
        margin-bottom .5em

    &-meta
        padding 1em 0
